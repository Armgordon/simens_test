{
  "singleQuote": true,
  "printWidth": 120,
  "semi": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["**/*.js"],
      "options": {
        "parser": "flow",
        "trailingComma": "es5"
      }
    },
    {
      "files": ["**/.*rc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["package.json"],
      "options": {
        "printWidth": 240
      }
    }
  ]
}
